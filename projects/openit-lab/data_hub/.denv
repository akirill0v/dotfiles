commands:
  bundle: &base_cmd
    directory: "/rest/app"
    image: "data_hub"
    from: "data"
    link:
      - "postgresql:pg"
    volumes:
      - "/home/kirillov/projects/openit-lab/data_hub:/rest/app"
  rake: &bundled
    <<: *base_cmd
    prepend: "bundle exec"
  rspec:
    <<: *bundled
  pry:
    <<: *bundled
  guard:
    <<: *bundled
    ports:
      - "8080:8080"
  rails: &rails
    <<: *bundled
    ports:
      - "8080:8080"
  unicorn:
    <<: *rails
  npm:
    <<: *base_cmd
  bower:
    <<: *base_cmd
  bash:
    <<: *base_cmd
